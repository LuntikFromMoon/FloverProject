<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping
    xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://doctrine-project.org/schemas/orm/doctrine-mapping
		https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd"
>
    <entity name="App\Entity\User" table="user">
        <indexes>
            <index name="phone_idx" columns="phone"/>
            <index name="email_idx" columns="email"/>
        </indexes>

        <unique-constraints>
            <unique-constraint name="phone_idx" columns="phone"/>
            <unique-constraint name="email_idx" columns="email"/>
        </unique-constraints>


        <id name="id" type="integer" column="id">
            <generator strategy="IDENTITY"/>
        </id>

        <many-to-one field="userRole" target-entity="App\Entity\UserRole">
            <join-column name="role_id" referenced-column-name="id" nullable="false"/>
        </many-to-one>

        <field name="firstName" column="first_name" type="string" length="255" nullable="false"/>
        <field name="lastName" column="last_name" type="string" length="255" nullable="false"/>
        <field name="surname" column="surname" type="string" length="255" nullable="true"/>
        <field name="birthDate" column="birth_date" type="datetime" nullable="true"/>
        <field name="phone" column="phone" type="string" length="255" nullable="true"/>
        <field name="email" column="email" type="string" length="255" nullable="false"/>
        <field name="password" column="password" type="string" length="255" nullable="false"/>
    </entity>
</doctrine-mapping>
